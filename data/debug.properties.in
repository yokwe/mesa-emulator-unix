log4cpp.rootCategory=DEBUG, FILE, CONSOLE

log4cpp.appender.CONSOLE=ConsoleAppender
log4cpp.appender.CONSOLE.layout=PatternLayout
log4cpp.appender.CONSOLE.layout.ConversionPattern=%d{%H:%M:%S.%I} %-5p %-12c %m%n
#log4cpp.appender.CONSOLE.layout.ConversionPattern=%-5p %-12c %m%n

log4cpp.appender.FILE=FileAppender
log4cpp.appender.FILE.fileName=@CMAKE_BINARY_DIR@/run/debug.log
log4cpp.appender.FILE.layout=PatternLayout
log4cpp.appender.FILE.layout.ConversionPattern=%d{%H:%M:%S.%I} %-5p %-12c %m%n
#log4cpp.appender.FILE.layout.ConversionPattern=%-5p %-12c %m%n
